
<p class='developer-title'>Developer Profile</p>

<p class='textbox-label'>Email: <%= @developer.email %></p><br/>

<% if @developer.skills.any? %>
	<p class='project-text'>Skills:</p>
	<% @developer.skills.each do |skill| %>
		<div class="ck-button-show">
			<label><span><%= skill.name %></span></label>
		</div>
	<% end %>
<% else %>
	<p class='project-text'>Skills: Not defined</p>
<% end %>

<br/><br/><br/><br/>

<%= link_to('Edit Profile', edit_developer_registration_path, class: 'button') %>        
<%= link_to('Back', developer_dashboard_path(current_developer), class: 'button') %>        



<p class='client-title'>Client Dashboard</p>

<div class='project-list-container'>
	<% if @projects != [] %>
		<% @projects.each do |project| %>
			<div class='project-container'>
				<p class='project-text'>ID: <%= project.id %></p>
				<p class='project-text'>Name: <%= project.name %></p>
				<p class='project-text'>Status: <%= project.status.capitalize %></p>
					<% if project.skills.any? %>
						<p class='project-text'>Required skills:</p>
						<% project.skills.each do |skill| %>
							<div class="ck-button-show">
								<label><span><%= skill.name %></span></label>
							</div>
						<% end %>
					<% else %>
						<p class='project-text'>Required skills: Not defined</p>
					<% end %>
				<br/><br/>
				<p class='project-links'>
					<%= link_to 'Show', client_project_path(current_client, project.id), class: 'small-button' %>  
					<%= link_to 'Edit', edit_client_project_path(current_client, project.id), class: 'small-button' %>
					<%= link_to 'Delete', client_project_path(current_client, project.id), data: { confirm: "Are you sure?" }, method: :delete, class: 'small-button' %>
				</p>  
			</div>
		<% end %>
	<% else %>
		<p class='textbox-label'>No Projects Yet</p>
	<% end %>
</div>

<div class='create-button-container'>
	<%= link_to 'Create New Project', new_client_project_path(current_client), class: 'create-button button' %>  
</div>



